{{#if session.isAuthenticated}}
<header class="page-header">
  {{#link-to 'grams.new' class="button new-gram-button"}}Add New Gram{{/link-to}}
</header>
{{/if}}

<ul class="grams">
  {{#each grams as |gram|}}
    {{gram-card gram=gram
    tagName="li"
    isAuthenticated=session.isAuthenticated
    currentUser=session.currentUser
    setLiked="setLiked"
    setUnliked="setUnliked"}}
  {{/each}}
</ul>

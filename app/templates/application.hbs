<header id="app-header" class="app-header" role="banner">
  <div class="container">
    <h1 class="logo">{{#link-to 'grams'}}Emstagram{{/link-to}}</h1>

    <nav class="app-nav" role="navigation">
      <ul class="list-inline">
        {{#if session.isAuthenticated}}
        <li>{{session.currentUser.username}}</li>
        <li>
          <a href="#" class="logout" {{action "invalidateSession"}}>logout</a>
        </li>
        {{else}}
        <li>
          {{#link-to "login" class="login"}}login{{/link-to}}
        </li>
        {{/if}}
      </ul>
    </nav>
  </div>
</header>
<!-- /#app-header -->

<div id="main" class="main" role="main">
  {{outlet}}
</div>
<!-- /#main -->
